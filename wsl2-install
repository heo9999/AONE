#WSL2 
#power shell 

#step 1-1
dism.exe /online /enable-feature /featurename:Microsoft-Windows-Subsystem-Linux /all /norestart

#step 1-2
dism.exe /online /enable-feature /featurename:VirtualMachinePlatform /all /norestart

#step 1-3
https://wslstorestorage.blob.core.windows.net/wslblob/wsl_update_x64.msi

#step 1-4
reboot

#step 1-5
install in ms store 'Windows Terminal'

#step 1-6
#terminal
wsl --set-default-version 2

#step 2-1
#centos download
https://github.com/mishamosher/CentOS-WSL/releases/tag/8-stream-20220125

#step 2-2
#install
CentOS8-stream.exe

#step 2-4
#run
CentOS8-stream.exe

#step 2-3
#uninstall
CentOS8-stream.exe clean

#step 2-4
yum update -y

#step 3-1
adduser e89112
passwd e89112 (qawsedrf!1)

#step 3-2
gpasswd -a e89112 wheel

#step 3-3
CentOS8-stream.exe config --default-user e89112
